<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/activity_login"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/logoScreenBackground">

    <LinearLayout
        android:id="@+id/ll_fido2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btn_fido2reg"
            android:layout_width="1dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="FIDO2 KEY 注册"
            android:textColor="#fff"
            android:textSize="16sp" />

        <Button
            android:id="@+id/btn_fido2auth"
            android:layout_width="160dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="FIDO2 KEY 认证"
            android:textColor="#fff"
            android:textSize="16sp" />

        <Button
            android:id="@+id/btn_fido2dereg"
            android:layout_width="1dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:gravity="center"
            android:text="FIDO2 KEY 注销"
            android:textColor="#fff"
            android:textSize="16sp"/>
    </LinearLayout>

</RelativeLayout>